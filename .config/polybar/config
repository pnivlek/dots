[colors]
background = ${xrdb:color0:#3d4c5f}
foreground = ${xrdb:color7:#f8f8f2}
color0 = ${xrdb:color0:#3d4c5f}
color1 = ${xrdb:color1:#F48FB1}
color2 = ${xrdb:color2:#A1EFD3}
color3 = ${xrdb:color3:#F1FA8C}
color4 = ${xrdb:color4:#92B6F4}
color5 = ${xrdb:color5:#BD99FF}
color6 = ${xrdb:color6:#87DFEB}
color7 = ${xrdb:color7:#F8F8F2}
color8 = ${xrdb:color8:#56687E}
color9 = ${xrdb:color9:#EE4F84}
color10 = ${xrdb:color10:#53E2AE}
color11 = ${xrdb:color11:#F1FF52}
color12 = ${xrdb:color12:#6498EF}
color13 = ${xrdb:color13:#985EFF}
color14 = ${xrdb:color14:#24D1E7}
color15 = ${xrdb:color15:#E5E5E5}

[settings]
pseudo-transparency = true

[bar/laptop]
monitor = ${env:MONITOR:eDP-1}
width = 100%
height = 28
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.color9}

padding = 2

module-margin = 0

font-0 = Overpass:Regular:pixelsize=11
font-1 = FontAwesome:size=8:antialias=false
font-2 = siji:pixelsize=10

modules-left = mpd pad alsa
modules-center = bspwm
modules-right = backlight pad wlan pad battery battery2 pad date
bottom = true

tray-position = none

enable-ipc = true

wm-restack = bspwm

[bar/desktop]
monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 28
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.color9}

padding = 2

module-margin = 0

font-0 = Dina:medium:pixelsize=11;1
font-1 = FontAwesome:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1

modules-left = mpddesk pad pulseaudio
modules-center = bspwm
modules-right = pad date
bottom = true

tray-position = none

enable-ipc = true

wm-restack = bspwm

[bar/desktop2]
inherit=bar/desktop
monitor=HDMI-2

modules-left = cpu pad memory pad fspad filesystem
modules-right = date

[module/backlight]
type = custom/ipc
hook-0 = echo "$(light -G | sed -e "s/\.\w*//")%"
initial = 1
format =  <output>
format-foreground = ${colors.color2}

[module/bspwm]
type = internal/bspwm

label-focused= 
label-occupied = 
label-urgent = 
label-empty = 

format = <label-state>

label-monitor = %name%
label-focused-foreground = ${colors.color2}
label-occupied-foreground = ${colors.color3}
label-urgent-foreground = ${colors.color1}
label-empty-foreground = ${colors.color7}

label-separator = " "
label-separator-padding = 1

[module/mpd]
type = internal/mpd
format-online =<toggle>  <label-song>
format-background = ${colors.foreground}


icon-play =
icon-pause =

label-song = %title%
label-song-maxlen = 25
label-song-ellipsis = true

[module/mpddesk]
type = internal/mpd
format-online =<toggle> <label-song>
format-background = ${colors.foreground}


icon-play =
icon-pause =

label-song = %artist% - %title%
label-song-maxlen = 100
label-song-ellipsis = true

[module/wlan]
type = internal/network
interface = wlan0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
label-connected = %essid%
label-connected-foreground = ${colors.color5}

format-disconnected = <label-disconnected>
label-disconnected = Disconnected
label-disconnected-foreground = ${colors.color1}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.color7}

[module/date]
type = internal/date
interval = 5

date = %b %d
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format =  <label>
format-foreground = ${colors.color6}

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
format-volume-foreground = ${colors.color5}
format-muted-foreground = ${colors.color1}
label-muted =  Muted
ramp-volume-0 =
ramp-volume-1 =
ramp-volume-2 =

[module/alsa]
type = internal/alsa
master-soundcard = default

format-volume = <ramp-volume> <label-volume>
format-volume-foreground = ${colors.color5}
format-muted-foreground = ${colors.color1}
label-muted =  Muted
ramp-volume-0 =
ramp-volume-1 =
ramp-volume-2 =

[module/battery]
type = internal/battery
battery = BAT1
adapter = AC
full-at = 99.5
time-format = %-H:%M

format-charging = <animation-charging> <label-charging>
label-charging = %percentage%%, Ch.

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%%

format-full-prefix = " "
format-full-prefix-foreground = ${colors.color5}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.color5}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.color7}
animation-charging-framerate = 750

[module/battery2]
inherit=module/battery
battery=BAT0
format-charging=,<label-charging>
label-charging=%percentage%%
format-discharging=,<label-discharging>

[module/xkeyboard]
type = internal/xkeyboard

; List of indicators to ignore
blacklist-0 = num lock
blacklist-1 = scroll lock
format =  <label-layout>

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-underline = #f90000
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-underline = #4bffdc
label = %percentage_used%%

[module/pad]
type = custom/text
content = "  "
content-foreground = ${colors.color0}

[module/fspad]
type = custom/text
content = "  "
format-underline = #4bffdc

[module/filesystem]
type = internal/fs

; Mountpoints to display
mount-0 = /
mount-1 = /hdd

; Seconds to sleep between updates
; Default: 30
interval = 30

; Display fixed precision values
; Default: false
fixed-values = true

; Spacing between entries
; Default: 2
spacing = 4
format-underline = #4bffdc

[settings]
screenchange-reload = true
