# zathurarc with sayo theme colours

set default-bg "{{colors.background}}"
set default-fg "{{colors.foreground}}"

set highlight-color "{{colors.cyan.bold}}"
set highlight-active-color "{{colors.yellow.bold}}"

set statusbar-bg "{{colors.black.normal}}"
set statusbar-fg "{{colors.yellow.normal}}"

set index-bg "{{colors.black.normal}}"
set index-fg "{{colors.white.normal}}"
set index-active-bg "{{colors.cyan.normal}}"
set index-active-fg "{{colors.white.bold}}"

set inputbar-bg "{{colors.black.normal}}"
set inputbar-fg "{{colors.green.normal}}"

set recolor-lightcolor "{{colors.background}}"
set recolor-darkcolor "{{colors.foreground}}"
set recolor "true"

set completion-bg "{{colors.background}}"
set completion-fg "{{colors.foreground}}"
set completion-group-bg "{{colors.background}}"
set completion-group-fg "{{colors.white.normal}}"
set completion-highlight-bg "{{colors.blue.bold}}"
set completion-highlight-fg "{{colors.black.normal}}"

set notification-error-bg "{{colors.background}}"
set notification-error-fg "{{colors.red.normal}}"
set notification-warning-bg "{{colors.black.bold}}"
set notification-warning-fg "{{colors.red.normal}}"
set notification-bg "{{colors.black.bold}}"
set notification-fg "{{colors.yellow.normal}}"

set font "{{term_fonts[0]}} Regular {{pixelsize}}"
